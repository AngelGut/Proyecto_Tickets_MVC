<Window x:Class="TicketApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sistema de Tickets"
        Height="600"
        Width="950"
        WindowStartupLocation="CenterScreen"
        Background="#F4F7FC">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- PANEL IZQUIERDO -->
        <Border Background="White" CornerRadius="15" Padding="20">
            <StackPanel>

                <TextBlock Text="Crear Ticket"
                           FontSize="20"
                           FontWeight="Bold"
                           Margin="0 0 0 20"/>

                <TextBlock Text="Título"/>
                <TextBox x:Name="TxtTitulo"
                         Height="35"
                         Margin="0 5 0 15"
                         Padding="10"
                         BorderBrush="#D0D7E2"/>

                <TextBlock Text="Descripción"/>
                <TextBox x:Name="TxtDescripcion"
                         Height="120"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         Padding="10"
                         Margin="0 5 0 20"
                         BorderBrush="#D0D7E2"/>

                <Button Content="Crear Ticket"
                        Height="40"
                        Background="#2563EB"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Click="BtnCrear_Click"/>

                <TextBlock x:Name="TxtMensaje"
                           Margin="0 15 0 0"
                           Foreground="#555"
                           FontSize="13"/>
            </StackPanel>
        </Border>

        <!-- PANEL DERECHO -->
        <Border Grid.Column="2"
                Background="White"
                CornerRadius="15"
                Padding="15">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Lista de Tickets"
                           FontSize="20"
                           FontWeight="Bold"/>

                <!-- TARJETAS DE TICKETS -->
                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="IcTickets">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border CornerRadius="15"
                                        Padding="14"
                                        Margin="10"
                                        Width="260"
                                        Background="White"
                                        BorderBrush="#E2E8F0"
                                        BorderThickness="1"
                                        MouseDown="Ticket_MouseDown">

                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="10"
                                                          ShadowDepth="2"
                                                          Opacity="0.15"/>
                                    </Border.Effect>

                                    <StackPanel>

                                        <TextBlock Text="Ticket #{Binding Id}"
                                                   FontWeight="Bold"
                                                   FontSize="12"
                                                   Foreground="#64748B"/>

                                        <TextBlock Text="{Binding Titulo}"
                                                   FontSize="17"
                                                   FontWeight="SemiBold"
                                                   Margin="0 6 0 4"
                                                   Foreground="#1E293B"/>

                                        <TextBlock Text="{Binding Descripcion}"
                                                   TextWrapping="Wrap"
                                                   FontSize="13"
                                                   Foreground="#475569"
                                                   Margin="0 0 0 10"/>

                                        <Border CornerRadius="20"
                                                Padding="6 3"
                                                HorizontalAlignment="Left">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="#DBEAFE"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Estado}" Value="Cerrado">
                                                            <Setter Property="Background" Value="#DCFCE7"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>

                                            <TextBlock Text="{Binding Estado}"
                                                       FontWeight="Bold"
                                                       FontSize="12">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="#1D4ED8"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Estado}" Value="Cerrado">
                                                                <Setter Property="Foreground" Value="#15803D"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Border>

                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <Button Grid.Row="4"
                        Content="Cambiar Estado"
                        Height="40"
                        Background="#1D4ED8"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Click="BtnCambiarEstado_Click"/>
            </Grid>
        </Border>

    </Grid>
</Window>
